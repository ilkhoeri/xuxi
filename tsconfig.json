{
  "extends": "./configs/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./lib",
    "module": "ESNext",
    "declarationDir": "./lib/types",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": false
  },
  "exclude": ["node_modules", "lib", "__tests__", "src/**/*.test.ts", "src/tests/**"]
}
